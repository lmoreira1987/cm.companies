@model GServiceManagerMVC.ViewModels.Fabrica.OSDescricaoViewModel

<div class="panel css-div-partial col-md-12" style="border-color:#4A8BC2 !important;">
    <div class="panel-heading col-md-12" style="background-color:#4A8BC2 !important;">
        <i class="fa fa-bars css-i-atividade-toggle js-i-toggle-atividade"></i><span> Descrição da OS</span>
    </div>
    <div class="row-fluid">
        <div class="panel-body js-div-panel-atividade">
            <br />
            <div class="row css-div-margin">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <label class="css-label">OS:</label>
                                <span> @Model.id - @Model.assunto</span>
                            </div>
                            <div class="col-md-4">
                                <label class="css-label">Projeto:</label>
                                <span> @Model.projeto</span>
                            </div>
                            <div class="col-md-3">
                                <label class="css-label">Tipo Ordem:</label>
                                <span> @Model.tipo</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2"></div>
                            <div class="col-md-5">
                                <label class="css-label">Data Estimativa Iní.:</label>
                                @if (Model.dataEstimativaIni.HasValue)
                                {
                                    <span> @Model.dataEstimativaIni.Value.ToString("dd/MM/yyyy")</span>
                                }
                                else
                                {
                                    <span> Não Estimada</span>
                                }
                            </div>
                            <div class="col-md-5">
                                <label class="css-label">Data Estimativa Fim:</label>
                                @if (Model.dataEstimativaFim.HasValue)
                                {
                                    <span> @Model.dataEstimativaFim.Value.ToString("dd/MM/yyyy")</span>
                                }
                                else
                                {
                                    <span> Não Estimada</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-12">
                    <div class="panel col-md-12" style="border-color:#4A8BC2 !important;">
                        <div class="panel-heading col-md-12" style="background-color:#4A8BC2 !important;">
                            <i class="fa fa-bars"></i><span> Descrição</span>
                        </div>
                        <div class="row-fluid">
                            <div class="panel-body">
                                <br />
                                <div class="row css-div-margin">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <span> @Model.os</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
