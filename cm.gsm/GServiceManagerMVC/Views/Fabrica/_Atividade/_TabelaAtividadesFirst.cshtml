@model List<GServiceManagerMVC.ViewModels.Fabrica.AtividadeViewModel>

<div class="panel col-md-12">
    <div class="panel-heading col-md-12">
        <i class="fa fa-bars css-i-atividade-toggle js-i-toggle-atividade"></i><span> Atividades</span>
        <div class="pull-right">
            <i id="js-i-atualizar" class="fa fa-refresh css-i-atualizar" title="Atualizar Atividades"></i>
            <i id="js-i-adicionar" class="fa fa-plus css-i-adicionar" title="Criar Atividades"></i>
            <i id="js-i-filtrar" class="fa fa-search css-i-filtrar" data-toggle="modal" data-target="#js-div-modal-filtro" title=" filtrar atividades"></i>
        </div>
    </div>
    <div class="row-fluid">
        <div class="panel-body js-div-panel-atividade">
            <div id="js-div-tabela-atividades">
                @Html.Partial("~/Views/Fabrica/_Atividade/_TabelaAtividades.cshtml", Model)
            </div>
        </div>
    </div>
</div>

<div id="js-div-modal-filtro" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Filtro de Atividades</h4>
            </div>
            <div class="modal-body">
                <div class="row-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            <h4>Projeto</h4>
                        </div>
                        <div class="col-md-3">
                            <h4>De</h4>
                        </div>
                        <div class="col-md-3">
                            <h4>Até</h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <select id="js-slc-modal-projeto" class="css-slc-modal">
                                <option value="0">Selecione</option>
                                @foreach (var item in ViewBag.Projetos)
                                {
                                    <option value="@item.id">@item.nome</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-3">
                            <input type="text" id="js-txt-modal-de" class="css-txt-modal mask-date datepicker" />
                        </div>
                        <div class="col-md-3">
                            <input type="text" id="js-txt-modal-ate" class="css-txt-modal mask-date datepicker" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <h4>Nome</h4>
                        </div>
                        <div class="col-md-3">
                            <h4>OS</h4>
                        </div>
                        <div class="col-md-2">
                            <h4>Intervalo</h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <input type="text" id="js-txt-modal-nome" class="css-txt-modal" />
                        </div>
                        <div class="col-md-3">
                            <input type="text" id="js-txt-modal-os" class="css-txt-modal mask-number" maxlength="9" />
                        </div>
                        <div class="col-md-3">
                            <select id="js-slc-intervalo-atividades" class="css-slc-modal">
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="js-btn-limpar" type="button" class="btn btn-default">Limpar</button>
                <button id="js-btn-pesquisar" type="button" class="btn btn-primary">Pesquisar</button>
            </div>
        </div>
    </div>
</div>
