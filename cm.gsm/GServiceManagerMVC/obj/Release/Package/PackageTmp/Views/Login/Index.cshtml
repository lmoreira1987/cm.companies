    <script type="text/javascript" src='<%= ResolveUrl ("/xGSM/bootstrap/js/bootstrap.min.js") %>'></script>

    <!-- Bootbox -->
    <script type="text/javascript" src='<%= ResolveUrl ("/xGSM/js/bootbox.js") %>'></script>

    <!-- Modernizr javascript -->
    <script type="text/javascript" src='<%= ResolveUrl ("/xGSM/plugins/modernizr.js") %>'></script>

    <!-- Isotope javascript -->
